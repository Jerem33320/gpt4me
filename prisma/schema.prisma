// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Task {
  id String @id @default(uuid()) @map("_id")
  content String
  createdAt DateTime @default(now())
  completed Boolean @default(false)
}

model Job {
  id        String      @id @default(uuid()) @map("_id")
  clerkId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  position    String
  company   String
  location  String
  status      String
  mode     String
}

model Tour {
  id String @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  city String
  country String
  title String
  description String
  image String?
  stops Json
  @@unique([city,country])
}

model Token {
  clerkId String @id @map("_id")
  tokens Int @default (1000)
}